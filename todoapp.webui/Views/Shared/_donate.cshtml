<form action="/account/premium">
<div class="donate-div">
  <div class="container" style="width: 300px;">
    <div class="input-group mb-3">
      <input name="FirstName" type="text" class="form-control" placeholder="First Name" aria-label="Username">
      <span class="input-group-text">/</span>
      <input name="LastName" type="text" class="form-control" placeholder="Last Name" aria-label="Server">
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text">$</span>
      <input name="DonationAmount" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
      <span class="input-group-text">.00</span>
    </div>

    <div class="input-group mb-3">
      <input name="CardNo" type="text" class="form-control" placeholder="Credit Card No" aria-label="Username">
    </div>

    <div class="input-group mb-3">
      <input name="Exp" type="text" class="form-control" placeholder="Exp" aria-label="Server">
      <input name="CVC" type="text" class="form-control" placeholder="CVC" aria-label="Server">
    </div>

  </div>
  <div class="d-flex justify-content-center">
    <div class="input-group" style="width: 600px;">
      <span class="input-group-text">Your Message</span>
      <textarea name="Message" class="form-control" aria-label="With textarea"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Donate</button>
  </div>
  <div class="d-flex justify-content-center">
    <a onclick="hideDonation()" href="#">Back To Login Page</a>
  </div>
</div>
</form>